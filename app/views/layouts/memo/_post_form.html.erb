<%= form_with model: memo_new, local: true, method: :post, class: "memo-form" do |form| %>
<div class="form-group">
  <%= form.label :title, class: "form-label" %>
  <%= form.text_field :title, placeholder: "タイトル", class: "form-input" %>
</div>
<div class="form-group">
  <%= form.label :description, class: "form-label" %>
  <%= form.text_area :description, placeholder: "メモ", class: "form-textarea" %>
</div>
<div class="form-group">
  <%= form.submit "作成", class: "btn btn-primary" %>
</div>
<% end %>