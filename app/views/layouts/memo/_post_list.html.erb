<%= form_with model: memo, url: memo_path(memo.id), local: true, method: :patch, class: "memo-form" do |form| %>
  <div class="form-group">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-input" %>
  </div>
  <div class="form-group">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-textarea" %>
  </div>
  <div class="">
    <%= form.submit "更新", class: "btn btn-success" %>
  </div>
<% end %>
<%= button_to "削除", memo_path(memo.id), method: :delete, class: "btn btn-danger" %>
